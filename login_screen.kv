<LoginScreen>:
    BoxLayout:
        orientation: 'vertical'

        Label:
            text: "Login"
            font_size:50
        
        TextInput:
            id: username_input
            hint_text: 'Usu√°rio'
            font_size:50
            multiline: False
            on_text: root.remove_spaces(self)
        
        TextInput:
            id: password_input
            font_size:50
            hint_text: 'Senha'
            multiline: False
            password: True
            on_text: root.remove_spaces(self)
        
        Button:
            text: 'Login'
            font_size:50
            on_press: root.login(root)
        
        Button:
            text: 'Cadastrar-se'
            font_size:50
            on_press: root.signup(root)
        
        Label:
            id: message_label
            font_size:50
