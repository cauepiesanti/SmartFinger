<LoginScreen>:
    BoxLayout:
        orientation: 'vertical'

        Label:
            text: "Login Screen"
        
        TextInput:
            id: username_input
            hint_text: 'Username'
            multiline: False
        
        TextInput:
            id: password_input
            hint_text: 'Password'
            multiline: False
            password: True
        
        Button:
            text: 'Login'
            on_press: root.login(root)
        
        Button:
            text: 'Sign Up'
            on_press: root.signin(root)
        
        Label:
            id: message_label


