<MainMenuScreen>:
    FloatLayout:
        id: main_layout

        BoxLayout:
            orientation: 'vertical'
            size_hint: 1, 0.8
            pos_hint: {'top': 0.9}

            # TABELA
            FloatLayout:
                size_hint: 1, 0.25

                BoxLayout:
                    orientation: 'horizontal'
                    size_hint: 1, 1
                    height: self.minimum_height
                    pos_hint: {'x': 0, 'y': 0}

                    BoxLayout:
                        canvas.before:
                            Color:
                                rgba: (0, 0, 0, 1)
                            Line:
                                width: 1
                                rectangle: self.x, self.y, self.width, self.height
                        TextInput:
                            readonly: True
                            multiline: False
                            text: 'Produto'
                            halign: 'center'
                            valign: 'middle'
                            font_size: 30
                            height: self.parent.height  # Define a altura igual à altura do pai
                            padding_y: [self.height/2 - self.line_height/2, 0]  # Centraliza verticalmente
                            pos_hint: {'center_x':0 , 'center_y':0.5}
                            background_normal: ''
                            background_color: (0.35, 0.35, 0.35, 1)  # Cinza claro

                    BoxLayout:
                        canvas.before:
                            Color:
                                rgba: (0, 0, 0, 1)
                            Line:
                                width: 1
                                rectangle: self.x, self.y, self.width, self.height
                        TextInput:
                            readonly: True
                            multiline: False
                            text: 'Preço unitário'
                            halign: 'center'
                            valign: 'middle'
