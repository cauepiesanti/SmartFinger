<SettingsScreen>:
    BoxLayout:
        orientation: 'vertical'

        Button:
            size_hint: 1,.25
            text: 'Selecionar idioma'
            #on_press: root.change_screen('language')
        
        Button:
            size_hint: 1,.25
            text: 'Editar perfil'
            on_press: root.change_screen('profile')

        Button:
            size_hint: 1,.25
            text: 'Toggle dark mode'
            on_press: root.toggle_dark_mode

        Button:
            size_hint: 1,.25
            text: 'Voltar'
            on_press: root.change_screen('mainMenu')
