<SignupScreen>:
    BoxLayout:
        orientation: 'vertical'
    
        Label:
            text: "Cadastro"
        
        TextInput:
            id: fullName_input
            hint_text: "Nome completo"
            multiline: False

        TextInput:
            id: gender_input
            hint_text: "Gênero"
            multiline: False

        TextInput:
            id: phoneNumber_input
            hint_text: "Número de celular"
            multiline: False
        
        TextInput:
            id: birthDate_input
            hint_text: "Data de nascimento"
            multiline: False

        TextInput:
            id: cpf_input
            hint_text: "CPF"
            multiline: False
        
        TextInput:
            id: rg_input
            hint_text: "RG"
            multiline: False

        TextInput:
            id: email_input
            hint_text: "Email"
            multiline: False
        
        TextInput:
            id: post_input
            hint_text: "Profissão"
            multiline: False

        TextInput:
            id: zipCode_input
            hint_text: "CEP"
            multiline: False

        TextInput:
            id: street_input
            hint_text: "Rua"
            multiline: False
        
        TextInput:
            id: homeNumber_input
            hint_text: "Número"
            multiline: False

        TextInput:
            id: unit_input
            hint_text: "Complemento"
            multiline: False
        
        Button:
            text: "Voltar"
            on_press: root.back(root)
        
        Button:
            text: "Avançar"
            on_press: root.createUser(root)
            
        

